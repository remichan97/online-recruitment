@model IEnumerable<online_recruitment.Models.Vacancy>

@{
    ViewBag.Title = "Vacancy Listing";
}

<h2>Vacancies Listing</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClosingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppliedQuantity)
        </th>
        <th>
            Created By
        </th>
        <th>
            Vacancy State
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClosingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppliedQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VacancyStatu.Name)
        </td>
        <td>
            <a href="@Url.Action("Edit","Vacancies", new {id = item.Id})" class="btn btn-primary" title="Edit"><i class="fa-solid fa-pen"></i></a> 
            <a href="@Url.Action("Details", "Vacancies", new {id = item.Id})" class="btn btn-info" title="View Vacancy Details"><i class="fa-solid fa-memo-circle-info"></i></a> 
        <a href="@Url.Action("Delete", "Vacancies", new {id = item.Id})" class="btn btn-danger" title="Delete"><i class="fa-solid fa-trash"></i></a>
        </td>
    </tr>
}

</table>
